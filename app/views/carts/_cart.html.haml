%article
  - if notice
    %aside#notice= notice
  - unless cart.line_items.empty?
    %h2= t('.title')
    %table
      = render(cart.line_items.sort)
      %tfoot
        %tr
          %th{:colspan => "2"} Total:
          %td.price= number_to_currency(cart.total_price)
    .actions
    = button_to t('.empty'), cart, method: :delete,remote: true, data: { confirm: 'Are you sure?' } 

    
    = button_to t('.checkout'), new_order_path, method: :get, class: "checkout"