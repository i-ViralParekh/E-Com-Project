%p#notice= notice
%h1 L Users
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @l_users.each do |l_user|
      %tr
        %td= l_user.name
        %td= link_to 'Show', l_user
        %td= link_to 'Edit', edit_l_user_path(l_user)
        %td= link_to 'Destroy', l_user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New L User', new_l_user_path
